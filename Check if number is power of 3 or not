num=int(input("Enter the number:"))

for i in range (1,100,1):
    if 3**i % num == 0:
        print("Yes")
        break
else:
    print("No")


---------------------------------------------

num=int(input("Enter your Number"))
power=int(input("Enter the power to check"))

while num>1:
    num=num/power
    
if num==1:
    print("YES")
else:
    print("NO")
